<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.canyinghao.canphotos.preview.PhotoDraweeView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:failureImage="@mipmap/icon_empty"
        app:failureImageScaleType="centerInside"

        />

    <!--app:progressBarImage="@drawable/fb_progress_bar"-->
    <!--app:progressBarImageScaleType="centerInside"-->


    <com.pnikosis.materialishprogress.ProgressWheel

        android:id="@+id/progressWheel"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"

        app:matProg_progressIndeterminate="true"
        app:matProg_barColor="?attr/colorPrimary"
        app:matProg_barWidth="4dp"

        app:matProg_rimColor="#00000000"
        app:matProg_rimWidth="4dp"

        />

</FrameLayout>
